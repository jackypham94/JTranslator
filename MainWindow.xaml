                                        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="False">
                                        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
                                        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                                    </Trigger>-->
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="{x:Type ScrollBar}">
                                <Setter Property="MinWidth" Value="2" />
                                <Setter Property="Width" Value="5" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ScrollBar}}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <StopStoryboard BeginStoryboardName="sbLoading"/>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.4" To="0.8" Duration="0:0:1.5" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.8" To="0.4" Duration="0:0:1.5" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Name="sbLoading">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.8" To="0.4" Duration="0:0:1.5" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                    <!--<ProgressBar x:Name="CommentProgressBar" Grid.Row="2" Visibility="Collapsed" Foreground="Teal"
                             Background="{x:Null}" IsIndeterminate="True" Margin="0,5,0,0" />-->
                </Grid>
            </Border>
        </Popup>
        <Popup x:Name="HistoryPopup" Placement="Right" PlacementRectangle="255,0,0,0" StaysOpen="False"
               AllowsTransparency="True" PopupAnimation="Fade" Closed="HistoryPopup_Closed">
            <Border Visibility="Visible" BorderThickness="0"
                    CornerRadius="4" Padding="10" Width="180" VerticalAlignment="Top"
                    Background="White">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Opacity" Value="0.8" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsFaded}" Value="0">
                                <Setter Property="Opacity" Value="0.4" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFaded}" Value="1">
                                <Setter Property="Opacity" Value="0.8" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsFaded}" Value="2">
                                <Setter Property="Opacity" Value="1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Path
                            Data="{StaticResource History}"
                            Fill="Gray" Stretch="Uniform" Width="15" Height="15" />
                        <TextBlock Grid.Column="1" Text="Histories" FontSize="16" FontWeight="Bold"
                                   Foreground="Teal" TextWrapping="Wrap" Background="{x:Null}" Margin="5,0,0,0" VerticalAlignment="Center" />
                        <Button x:Name="ClearHisPopupButton" Grid.Column="2" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right" Click="ClearHisPopupButton_Click"  >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Xoá lịch sử" Margin="0.2">
                                                    <Path Data="{StaticResource Trash}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkRed" />
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                        <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseHisPopupButton" Grid.Column="3" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Right" Click="CloseHisPopupButton_Click"  >
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" x:Name="Border" Background="LightGray" BorderThickness="1" Margin="0.2">
                                                    <Path Data="{StaticResource Close}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkRed" />
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                        <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                    </Grid>
                    <ListView x:Name="HistoryListView" BorderThickness="0" Foreground="Gray" FontSize="12"
                              HorizontalContentAlignment="Stretch" MaxHeight="450"
                              SelectionChanged="HistoryListView_SelectionChanged" Margin="0,5,0,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Separator Opacity="0.2">
                                        <Separator.Style>
                                            <Style TargetType="Separator">
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding RelativeSource={RelativeSource PreviousData}}"
                                                        Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Separator.Style>
                                    </Separator>
                                    <TextBlock Text="{Binding Path=.}" ToolTip="{Binding Path=.}"
                                               TextTrimming="CharacterEllipsis"
                                               TextWrapping="Wrap" MaxHeight="50" />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.Resources>
                            <Style TargetType="{x:Type ScrollBar}">
                                <Setter Property="MinWidth" Value="2" />
                                <Setter Property="Width" Value="5" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ScrollBar}}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <StopStoryboard BeginStoryboardName="sbLoading"/>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.4" To="0.8" Duration="0:0:1.5" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.8" To="0.4" Duration="0:0:1.5" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard Name="sbLoading">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"  From="0.8" To="0.4" Duration="0:0:1.5" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                    </ListView>
                    <!--<ListView BorderThickness="0">
                        <TextBlock Background="Gray" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxHeight="50" Margin="0,0,0,5" VerticalAlignment="Center">Test</TextBlock>
                        <TextBlock TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxHeight="50" Margin="0,0,0,5">Test</TextBlock>
                    </ListView>-->
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
