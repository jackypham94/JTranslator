<Window x:Class="JTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JTranslator" 
        mc:Ignorable="d"
        AllowsTransparency="True" WindowStyle="None" Topmost="True"
        x:Name="Root" Width="250" ShowInTaskbar="False"
        Title="JTranslator" UseLayoutRounding="True" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        MouseLeftButtonDown="Root_MouseLeftButtonDown" SnapsToDevicePixels="True" WindowStartupLocation="CenterScreen" Loaded="Root_Loaded">
    <Window.Background>
        <SolidColorBrush Opacity="0" />
    </Window.Background>
    <Window.Resources>
        <!--<Style x:Key="RoundedButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" Background="{TemplateBinding Background}" BorderThickness="1" Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
        <!--<Style x:Key="{x:Type ContextMenu}" TargetType="{x:Type ContextMenu}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContextMenu}">
                        <Border Background="#CD222120" CornerRadius="7, 7, 8, 8" BorderBrush="DarkGray" BorderThickness="2" Opacity="0.96">
                            <StackPanel ClipToBounds="True" Orientation="Vertical" IsItemsHost="True" Margin="5,4,5,4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>-->
        <!--<ControlTemplate x:Key="{x:Static MenuItem.TopLevelItemTemplateKey}" TargetType="{x:Type MenuItem}">
            <Border Name="Border" >
                <Grid>
                    <ContentPresenter Margin="6,3,6,3" ContentSource="Header" RecognizesAccessKey="True" />
                </Grid>
            </Border>
        </ControlTemplate>-->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" x:Name="Border" Background="LightGray" BorderThickness="1" Margin="0.2" Opacity="0.6" Width="30" Height="30">
                            <ContentPresenter x:Name="ContentPresenter" Focusable="False"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="RoundedTextBoxControlTemplate" TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}"
                    x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                <ScrollViewer x:Name="PART_ContentHost" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                            TargetName="Border" />
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <!--<CollectionViewSource x:Key="CollectionSource" Source="{Binding}" />-->

        <!--<Style TargetType="RichTextBox">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedText}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>-->

        <Style x:Key="StackPanelStyle" TargetType="StackPanel">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOpenedSettings, TargetNullValue=''}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Opacity" Value="0.8" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFaded}" Value="0">
                    <Setter Property="Opacity" Value="0.4" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFaded}" Value="1">
                    <Setter Property="Opacity" Value="0.8" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsFaded}" Value="2">
                    <Setter Property="Opacity" Value="1" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid>
        <Border BorderThickness="0" Width="250"
                CornerRadius="4" Padding="10">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="White" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Focusable="False" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image x:Name="Logo" Source="/translate.ico" Width="15" Height="15" />
                    <TextBlock Grid.Column="1" Grid.Row="0" x:Name="StatusTextBlock"
                               MaxHeight="20" TextWrapping="Wrap" FontSize="10" Background="{x:Null}"
                               VerticalAlignment="Center" Margin="5,0,0,0" >
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Text" Value="Auto: OFF"/>
                                <Setter Property="Foreground" Value="DarkRed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsAutoTranslate}" Value="True">
                                        <Setter Property="Text" Value="Auto: ON"/>
                                        <Setter Property="Foreground" Value="DarkGreen"/>
                                    </DataTrigger>
                                    <!--<DataTrigger Binding="{Binding IsOpenedSettings}" Value="True">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>-->
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" Margin="5,0,0,0">
                        <Button x:Name="SettingsButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="SettingsButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Mở cài đặt">
                                                    <Path Data="{StaticResource Settings}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsOpenedSettings}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Đóng cài đặt" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsOpenedSettings}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <!--<Setter TargetName="ButtonPath" Property="Fill" Value="Gray" />-->
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsOpenedSettings}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <!--<Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />-->
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="HistoryButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="HistoryButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Lịch sử tìm kiếm">
                                                    <Path Data="{StaticResource History}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsOpenedHistories}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Đóng lịch sử tìm kiếm" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsOpenedHistories}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="Gray" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsOpenedHistories}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>



                        <!--<Button x:Name="OpacityButton" util:CornerRadiusSetter.CornerRadius="4" Background="LightGray"
                            Opacity="0.6" Width="25" Height="25" BorderBrush="{x:Null}" VerticalAlignment="Center"
                            ToolTip="Connected" Click="OpacityButton_Click">
                        <Button.Content>
                            <Path Data="{Binding OpacityPath}"
                                  Fill="Gray"
                                  Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                  VerticalAlignment="Center" />
                        </Button.Content>
                    </Button>-->
                        <Button x:Name="AutoTranslateButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="AutoTranslateButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Bật dịch nhanh">
                                                    <Path Data="{StaticResource DisConnected}" x:Name="ButtonPath"
                                                        Fill="DarkRed" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsAutoTranslate}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource Connected}" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Tắt dịch nhanh" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsAutoTranslate}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkRed" />
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource DisConnected}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsAutoTranslate}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource Connected}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button x:Name="MinimizeButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center"
                                Click="MinimizeButton_Click" PreviewMouseLeftButtonDown="MinimizeButton_PreviewMouseLeftButtonDown"
                                PreviewMouseMove="MinimizeButton_PreviewMouseMove">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Thu nhỏ" Margin="0.2">
                                                    <Path Data="{StaticResource Maximize}" x:Name="ButtonPath"
                                                          Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsMinimized}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource Minimize}" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Phóng to" />
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsMinimized}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource Maximize}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsMinimized}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource Minimize}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="CloseButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="CloseButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Đóng ứng dụng" Margin="0.2">
                                                    <Path Data="{StaticResource Close}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkRed" />
                                                        <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                        <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    <!--Style="{StaticResource StackPanelStyle}">-->
                    <StackPanel Grid.Row="1" Grid.Column="2" x:Name="SettingsPanel" Orientation="Horizontal" HorizontalAlignment="Right" Style="{StaticResource StackPanelStyle}">
                        <Button x:Name="DClickButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="DClickButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Mở dịch nhanh bằng cách double click">
                                                    <Path Data="{StaticResource DoubleClick}" x:Name="ButtonPath"
                                                        Fill="Gray" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsDoubleClickOn}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Tắt dịch nhanh bằng cách double click" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsDoubleClickOn}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="Gray" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsDoubleClickOn}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="KanjiButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="KanjiButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="LightGray" BorderThickness="1" ToolTip="Mở cách đọc Hán tự">
                                                    <Path Data="{StaticResource KanjiOff}" x:Name="ButtonPath"
                                                        Fill="DarkRed" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsLoadKanji}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                        <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource KanjiOn}" />
                                                        <Setter TargetName="Border" Property="ToolTip" Value="Tắt cách đọc Hán tự" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMinimized}" Value="True">
                                                        <Setter Property="Visibility" Value="Hidden"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsLoadKanji}" Value="True"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkRed" />
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource KanjiOff}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding Path=IsLoadKanji}" Value="False"/>
                                                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <MultiDataTrigger.Setters>
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="SkyBlue" />
                                                            <Setter TargetName="Border" Property="Background" Value="#FFBEE6FD"/>
                                                            <Setter TargetName="ButtonPath" Property="Fill" Value="DarkGreen" />
                                                            <Setter TargetName="ButtonPath" Property="Data" Value="{StaticResource KanjiOn}" />
                                                        </MultiDataTrigger.Setters>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>

                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="LanguageButton" Opacity="0.6" Width="25" Height="25" VerticalAlignment="Center" Click="LanguageButton_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="4" Margin="0.2" x:Name="Border" Background="Red" BorderThickness="1" ToolTip="Japanese → Vietnamese">
                                                    <Path Data="{StaticResource LangVietnam}" x:Name="ButtonPath"
                                                        Fill="Yellow" Stretch="Uniform" Width="9" Height="9" HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsJaVi}" Value="True">
                                                        <Setter TargetName="ButtonPath" Property="Fill" Value="Gray" />
